<odoo>
    <data>
        <record model="ir.ui.view" id="language_school.lesson_form">
            <field name="name">lesson form</field>
            <field name="model">language_school.lesson</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="set_to_started" string="START LESSON" states="draft" type="object"
                                class="oe_highlight"/>

                        <button name="set_to_draft" string="SET TO DRAFT" states="started" type="object"/>

                        <button name="set_to_completed" string="SET TO COMPLETED" states="started" type="object"
                                class="oe_highlight"/>

                        <button name="set_to_canceled" string="CANCEL" states="draft,started" type="object"
                                class="oe_highlight"/>

                        <field name="state"
                               widget="statusbar"
                               statusbar_visible="draft,started,completed,canceled"
                               statusbar_colors='{"brouillon":"blue","pret":"green"}'/>

                    </header>
                    <sheet>
                        <h1>
                            <div>
                                <label for="name"/>
                                <br/>
                                <field name="name" class="oe_inline"/>
                            </div>
                        </h1>
                        <group>
                            <group>
                                <!--                                <label for="date_start" string="Periode"/>-->
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="teacher_id"/>
                            </group>

                            <group>
                                <field name="service_id"/>
<!--                                <field name="student_ids" widget="many2many_tags"/>-->

                            </group>
                            <label for="student_ids" string="Attendence"/>
                            <field name="student_ids">>
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="attendence"/>
                                </tree>
                            </field>
                        </group>

                    </sheet>

                </form>
            </field>
        </record>

        <!--        <record model="ir.ui.view" id="language_school.lesson_list">-->
        <!--            <field name="name">lesson list</field>-->
        <!--            <field name="model">language_school.lesson</field>-->
        <!--            <field name="arch" type="xml">-->
        <!--                <tree>-->
        <!--                    <field name="name"/>-->
        <!--                    <field name="date_start"/>-->
        <!--                    <field name="date_end"/>-->
        <!--                </tree>-->
        <!--            </field>-->
        <!--        </record>-->


        <record model="ir.actions.act_window" id="language_school.lesson_action_window">
            <field name="name">Classes</field>
            <field name="res_model">language_school.lesson</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>