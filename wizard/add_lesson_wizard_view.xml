<odoo>
    <data>
        <record model="ir.ui.view" id="language_school.add_lesson_wizard_form">
            <field name="name">Add Lessons</field>
            <field name="model">language_school.lesson_wizard</field>
            <field name="arch" type="xml">
                <form string="Classes">
                    <header>
                        <button name="add_lesson" string="Add lesson" type="object" class="oe_highlight"/>
                    </header>
                    <label for="student_ids"/>
                    <field name="student_ids" wiget="one2many_list">
                        <tree editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="add_lessons" string="Save" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>