<odoo>
    <data noupdate="1">

        <record id="user_brandon" model="language_school.student">
            <field name="name">Brandon Freeman</field>
        </record>

        <record id="user_nicole" model="language_school.student">
            <field name="name">Nicole Ford</field>
        </record>

        <record id="user_addison" model="language_school.student">
            <field name="name">Addison Olson</field>
        </record>

        <record id="class_demo" model="language_school.class">
            <field name="name">Japanese Class</field>
            <field name="date_start">2019-02-1 17:00:00</field>
            <field name="date_end">2019-02-28 19:00:55</field>
            <!--<field name="student_ids" eval="[(4, ref('user_brandon')), (4, ref('user_nicole')),(4, ref('user_addison'))]"/>-->
            <field name="repeat">weekly</field>
            <field name="monday" eval="True"/>
            <field name="wednesday" eval="True"/>
            <field name="friday" eval="True"/>
        </record>

        <record id="class_todo_action" model="ir.actions.server">
        <field name="name">Choose default class</field>
        <field name="model_id" ref="model_language_school_class"/>
        <field name="state">code</field>
        <field name="code">
record = env.ref('language_school.class_demo')
form_view = env.ref('language_school.class_form')
action = {
            'type': 'ir.actions.act_window',
            'res_model': 'language_school.class',
            'res_id': record.id,
            'view_type': 'form',
            'view_mode': 'form',
            'views': [(form_view.id, 'form')],
            'view_id': form_view.id,
            'target': 'self',
}
        </field>
    </record>

        <record id="Open Classes" model="ir.actions.todo">
            <field name="action_id" ref="language_school.class_todo_action"/>
            <field name="state">open</field>
        </record>


    </data>
</odoo>